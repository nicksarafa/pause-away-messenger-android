<?xml version="1.0" encoding="utf-8"?>

<com.pauselabs.pause.view.tabs.EmojiDirectoryView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emojiDirectory"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:gravity="bottom">

    <GridView
        android:id="@+id/emojiDirectoryGrid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:numColumns="2"
        android:textAlignment="center"
        android:listSelector="@color/transparent"
        android:cacheColorHint="@color/transparent"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:isScrollContainer="false"
        android:scrollbarStyle="outsideOverlay"
        android:smoothScrollbar="true"
        android:verticalScrollbarPosition="right"
        android:overScrollMode="never"
        android:overScrollFooter="@android:color/transparent"
        android:footerDividersEnabled="false"
        android:stretchMode="columnWidth" />

    <!-- Custom Pause View injected via Java -->
    <!-- Injecting the SoThree via Java also means I can't find it anymore to change up the styling. Need Help with that -->

</com.pauselabs.pause.view.tabs.EmojiDirectoryView>

