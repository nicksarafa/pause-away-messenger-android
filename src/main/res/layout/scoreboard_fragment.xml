<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/scoreboardBackgroundImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:id="@+id/pauseDetailsLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_pause_image"
            android:padding="8dp">

        <ListView
                android:id="@+id/scoreboardList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

        </ListView>

        <Button
                android:id="@+id/stopPauseSessionBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/stopPauseSessionBtn"/>

    </LinearLayout>





</FrameLayout>