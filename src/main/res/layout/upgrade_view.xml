<?xml version="1.0" encoding="utf-8"?>
<com.pauselabs.pause.view.tabs.UpgradeView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upgrade_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Upgrade Button -->

        <RelativeLayout
            android:id="@+id/upgrade_btn_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <android.widget.IconButton
                android:id="@+id/upgrade_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fab_button_diameter"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/upgrade_card_btn_background"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_extra_large"
                android:text="@string/upgrade_btn_text"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/list_view_margin_top"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/upgrade_bullet_1"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_large"
                    android:gravity="center_vertical|start"
                    android:layout_gravity="center_vertical|start"
                    android:layout_height="40dp"
                    android:textColor="@color/text_color"
                    android:text="Reason One"/>

                <TextView
                    android:id="@+id/upgrade_bullet_2"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_large"
                    android:gravity="center_vertical|start"
                    android:layout_gravity="center_vertical|start"
                    android:layout_height="40dp"
                    android:textColor="@color/text_color"
                    android:text="Reason Two"/>

                <TextView
                    android:id="@+id/upgrade_bullet_3"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_large"
                    android:gravity="center_vertical|start"
                    android:layout_gravity="center_vertical|start"
                    android:layout_height="40dp"
                    android:textColor="@color/text_color"
                    android:text="Reason Two"/>

                <TextView
                    android:id="@+id/upgrade_bullet_4"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_large"
                    android:gravity="center_vertical|start"
                    android:layout_gravity="center_vertical|start"
                    android:layout_height="40dp"
                    android:textColor="@color/text_color"
                    android:text="Reason Two"/>

            </LinearLayout>

        </RelativeLayout>

</com.pauselabs.pause.view.tabs.UpgradeView>