<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- Custom Scroll View -->

    <ScrollView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Me -->
            <!-- Name

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/me_section_label"
                style="@style/ListSeparatorTextView"/> -->

            <com.pauselabs.pause.views.SettingsButton
                android:id="@+id/nameBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:label="@string/name_settings_label"
                custom:content="John"/>

            <!-- Gender -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#999999"/>

            <com.pauselabs.pause.views.SettingsButton
                android:id="@+id/genderBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:label="@string/gender_settings_label"
                android:background="@null"
                custom:content="Male"/>

            <!-- Privacy

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_section_label"
                style="@style/ListSeparatorTextView"/> -->

            <com.pauselabs.pause.views.SettingsButton
                android:id="@+id/missedCallsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                custom:label="@string/reply_to_calls_settings_label"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#999999"/>

            <com.pauselabs.pause.views.SettingsButton
                android:id="@+id/receivedSMSBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                custom:label="@string/reply_to_SMS_settings_label"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#999999"/>

            <com.pauselabs.pause.views.SettingsButton
                android:id="@+id/blacklistBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                custom:label="@string/blacklist_label"
                custom:content=""/>

            <!-- Volume Settings Key -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#999999"/>

            <com.pauselabs.pause.views.SettingsButton
                android:id="@+id/volumeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                custom:label="@string/vibrate_label"
                custom:content="Yes"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#999999"/>

            <com.pauselabs.pause.views.SettingsButton
                android:id="@+id/voiceBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                custom:label="@string/voice_label"
                custom:content="Yes"/>

            <!-- Feedback

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_section_label"
                style="@style/ListSeparatorTextView"/> -->

            <com.pauselabs.pause.views.SettingsButton
                android:id="@+id/rateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                custom:label="@string/rate_us_settings_label"
                custom:content="Please? Ü"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#999999"/>


            <com.pauselabs.pause.views.SettingsButton
                android:id="@+id/contactBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                custom:label="@string/contact_us_label"
                custom:content="We Would Love To Hear From You"/>

            <!-- About -->

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/help_label"-->
            <!--style="@style/ListSeparatorTextView"/>-->

            <com.pauselabs.pause.views.SettingsButton
            android:id="@+id/supportBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            custom:label="@string/support_label"
            custom:content="We're Here to Help"/>

            <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#999999"/>

            <com.pauselabs.pause.views.SettingsButton
            android:id="@+id/privacyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            custom:label="@string/privacy_policy_label"
            custom:content="Why We Protect Your Information"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#999999"/>

            <com.pauselabs.pause.views.SettingsButton
            android:id="@+id/termsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            custom:label="@string/terms_label"
            custom:content="Had to Have It"/>

            <TextView
                android:id="@+id/versionFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version 1.0.xx.x © 2014 Pause Labs, LLC"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>