<?xml version="1.0" encoding="utf-8"?>
<com.pauselabs.pause.view.InteractiveView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/background_face"/>

    <!-- On Boarding Top Text -->

        <TextView
            android:id="@+id/interactive_pause_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"
            android:textSize="@dimen/text_extra_large"
            android:textColor="@color/dark_grey"
            android:textAlignment="center"
            android:paddingTop="@dimen/ob_btn_margin"
            android:paddingRight="@dimen/ob_btn_margin"
            android:paddingLeft="@dimen/ob_btn_margin"
            android:paddingStart="@dimen/ob_btn_margin"
            android:paddingEnd="@dimen/ob_btn_margin"/>

            <LinearLayout
                android:id="@+id/interactive_button_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"/>

</com.pauselabs.pause.view.InteractiveView>