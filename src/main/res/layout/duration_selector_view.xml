<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/durationSelectorContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

    <TextView
            android:id="@+id/hourSeekLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#555"
            android:text="0 HOURS"/>

    <SeekBar
            android:id="@+id/hourSelectorBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="0"
            android:max="12"
            android:secondaryProgress="0" />

    <TextView
            android:id="@+id/minuteSeekLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#555"
            android:text="0 MINUTES"/>

    <SeekBar
            android:id="@+id/minutesSelectorBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="0"
            android:max="12"
            android:secondaryProgress="0" />

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/addFiveMinBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5m"
                android:textColor="#3ebeb5"
                android:background="@null"
                android:layout_weight="1"/>

        <Button
                android:id="@+id/addFifteenMinBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+15m"
                android:textColor="#3ebeb5"
                android:background="@null"
                android:layout_weight="1"/>

        <Button
                android:id="@+id/addHourBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1h"
                android:textColor="#3ebeb5"
                android:background="@null"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/indefiniteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âˆž"
                android:textSize="24dp"
                android:textColor="#3ebeb5"
                android:background="@null"
                android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>