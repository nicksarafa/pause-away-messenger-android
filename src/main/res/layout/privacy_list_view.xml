<?xml version="1.0" encoding="utf-8"?>

    <!-- Static Top of Privacy List View -->

<com.pauselabs.pause.view.tabs.PrivacyView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/contact_search_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:imeOptions="actionSearch"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:textIsSelectable="false"
        android:textCursorDrawable="@drawable/cursor"
        android:background="@drawable/transparent_drawable"
        android:freezesText="false"
        android:hint="@string/privacy_search_bar"/>

    <Button
        android:id="@+id/privacySelectAll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/select_all_button"
        android:background="@drawable/transparent_drawable"/>

        <!-- Use standard android.R class list id instead of app specific id. This is just useful for
             consistency. -->
        <ListView
            android:id="@+id/contact_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:isScrollContainer="false"
            android:scrollbarStyle="outsideOverlay"
            android:smoothScrollbar="true"
            android:verticalScrollbarPosition="right"
            android:overScrollFooter="@android:color/transparent"
            android:footerDividersEnabled="false"/>

        <!-- style="@style/ContactListView" -->
        <!-- Use standard android.R class empty id instead of app specific id. This is just useful for
         consistency. -->
        <!--<TextView android:id="@id/android:empty"-->
            <!--android:gravity="center"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="@string/no_contacts"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge"/>-->

</com.pauselabs.pause.view.tabs.PrivacyView>

