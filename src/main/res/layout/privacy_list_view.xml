<?xml version="1.0" encoding="utf-8"?>

<com.pauselabs.pause.view.tabs.PrivacyView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/contact_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:overScrollMode="never"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:isScrollContainer="false"
        android:scrollbarStyle="outsideOverlay"
        android:smoothScrollbar="true"
        android:verticalScrollbarPosition="right"
        android:overScrollFooter="@android:color/transparent"
        android:footerDividersEnabled="false"/>

        <SearchView
            android:id="@+id/contact_search_field"
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:showAsAction="always|collapseActionView"
            android:actionViewClass="android.widget.SearchView"
            android:imeOptions="actionSearch"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:textIsSelectable="false"
            android:textCursorDrawable="@drawable/cursor"
            android:background="@color/holo_blue"
            android:freezesText="false"
            android:hint="@string/privacy_search_bar"/>

            <Button
                android:id="@+id/privacySelectAll"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/select_all_button"
                android:background="@drawable/transparent_drawable"/>

</com.pauselabs.pause.view.tabs.PrivacyView>

