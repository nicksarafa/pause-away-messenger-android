<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <!-- TODO Fix Header Image Later -->

   <!-- PNG 9 -->

    

    <ImageView
        android:layout_width="@dimen/ob_face_width"
        android:layout_height="@dimen/ob_face_height"
        android:paddingTop="@dimen/padding"
        android:layout_centerHorizontal="true"
        android:src="@drawable/on_boarding_face"/>

    <!-- Letters
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ob_letters_height"
        android:layout_centerHorizontal="true"
        android:src="@drawable/on_boarding_letters"/> -->

    <EditText
        android:id="@+id/ob_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/pause_green"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="@dimen/ob_text_medium"
        android:textColorHint="@color/text_light"
        android:hint="Enter Your First Name"/>

    <View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#7c7c7c"/>


    <LinearLayout
        android:id="@+id/on_boarding_bottom_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ob_save"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ob_btn_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/padding"
            android:background="@color/transparent"
            android:textColor="@color/pause_green"
            android:textSize="@dimen/ob_text_small"
            android:text="Save &amp; Continue"/>


        <Button
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ob_btn_height"
            android:layout_marginTop="@dimen/padding"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:textColor="@color/pause_green"
            android:text="Male"/>

        <Button
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ob_btn_height"
            android:layout_marginTop="@dimen/padding"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:textColor="@color/pause_green"
            android:text="Female"/>

    </LinearLayout>

</RelativeLayout>