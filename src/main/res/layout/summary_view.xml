<?xml version="1.0" encoding="utf-8"?>
<com.pauselabs.pause.view.tabs.SummaryView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_summary"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/transparent_drawable">

    <!-- Fab Container -->

    <RelativeLayout
        android:id="@+id/fab_container"
        android:layout_width="@dimen/fab_button_diameter"
        android:layout_height="@dimen/fab_button_diameter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/transparent_drawable">

        <ImageButton
            android:id="@+id/fab_image_button"
            android:layout_height="@dimen/fab_button_diameter"
            android:layout_width="@dimen/fab_button_diameter"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/contact_list_item_padding"
            android:layout_marginBottom="@dimen/contact_list_item_padding"
            android:background="@drawable/fab_button"
            android:src="@drawable/ic_action_sleep"
            android:tint="@android:color/white"
            android:layout_centerHorizontal="true"
            android:contentDescription="Start PaÃ¼se Session" />

    </RelativeLayout>

    <!-- Messages Container -->

    <RelativeLayout
        android:id="@+id/summary_view_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/fab_container"
        android:background="@color/text_white">

        <ListView
            android:id="@+id/summary_card_list_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"/>

        <TextView
            android:id="@+id/summary_no_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="36sp"
            android:textColor="@color/pause_green"
            android:text="No Messages"/>

    </RelativeLayout>

</com.pauselabs.pause.view.tabs.SummaryView>