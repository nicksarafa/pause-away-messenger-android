<?xml version="1.0" encoding="utf-8"?>
<com.pauselabs.pause.view.tabs.SummaryView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_summary"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/transparent_drawable">

    <!-- Messages Container -->

    <RelativeLayout
        android:id="@+id/summary_view_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/text_white">

        <!-- Message Storage container -->

        <ListView
            android:id="@+id/summary_card_list_view"
            android:paddingTop="@dimen/summary_view_vertical_padding"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@color/transparent"/>

            <!-- Preset "no messages" image -->

            <TextView
                android:id="@+id/summary_no_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_super_size"
                android:textColor="@color/main"
                android:text="@string/summary_splash_no_new_messages"/>

    </RelativeLayout>

</com.pauselabs.pause.view.tabs.SummaryView>