<?xml version="1.0" encoding="utf-8"?>

<com.pauselabs.pause.view.SummaryConversationCard
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="560dp"
    android:padding="@dimen/summary_view_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <!-- Sender Image Identity Circle -->

    <ImageView
        android:id="@+id/messageType"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/summary_circle"/>

        <!-- Wraps Right Icons Vertically -->

        <RelativeLayout
            android:id="@+id/rightIcons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <!-- Right Top Icon -->

            <ImageView
                android:id="@+id/respondReceipt"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="Read Reciept"
                android:src="@drawable/summary_circle_blue"/>

            <!-- Right Bottom Icon -->

            <ImageView
                android:id="@+id/respondReceipt2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/respondReceipt"
                android:contentDescription="Read Reciept"
                android:src="@drawable/summary_circle_blue"/>

        </RelativeLayout>



    <!-- Message List -->

        <LinearLayout
            android:id="@+id/messageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/messageType"
            android:layout_toEndOf="@id/messageType"
            android:minHeight="40dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/summary_view_padding"
            android:layout_marginStart="@dimen/summary_view_padding">

            <!-- Number -->

                <TextView
                    android:id="@+id/summaryMessageSender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:text="Mark Cuban"
                    android:textColor="@android:color/black"/>

                <!-- Text Preview -->

                    <TextView
                        android:id="@+id/summaryMessageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hey hows it going?"
                        android:textColor="@android:color/black"/>





                    <!-- Convo DropDown -->

                        <LinearLayout
                            android:id="@+id/convo_holder_view"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

            </LinearLayout>



    </RelativeLayout>








</com.pauselabs.pause.view.SummaryConversationCard>



